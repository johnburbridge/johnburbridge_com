---
// src/layouts/BlogPostLayout.astro
import BaseLayout from './BaseLayout.astro';
// Remove: import mermaid from 'mermaid'; // No longer needed here

// The frontmatter defined in the content collection schema is passed via Astro.props.entry.data
const { title, description, pubDate } = Astro.props.entry.data;
---
<BaseLayout title={title}> {/* Use post title for page title */}
  <article class="prose prose-invert mx-auto p-4 md:p-8">
    <h1>{title}</h1>
    <p class="text-gray-400 text-sm">
      Published on: <time datetime={pubDate.toISOString()}>
        {pubDate.toLocaleDateString('en-us', {
          year: 'numeric',
          month: 'short',
          day: 'numeric',
        })}
      </time>
    </p>
    {description && <p class="italic text-gray-300 mt-2">{description}</p>}
    <hr class="my-4"/>

    <!-- Rendered Markdown content -->
    <slot />

    <hr class="my-8"/>
    <a href="/blog" class="text-orange-400 hover:text-orange-300">&larr; Back to Blog Index</a>
  </article>

  <!-- Remove the previous script block -->

  <!-- Import the client-side Mermaid initialization script -->
  <script src="../scripts/init-mermaid.js"></script>

</BaseLayout>

<style is:global>
  /* Styles remain the same */
  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    font-weight: 600;
  }
  .prose p {
    margin-bottom: 1em;
  }
  .prose a {
    color: var(--accent);
    text-decoration: underline;
  }
  .prose a:hover {
    color: var(--accent-hover);
  }
  .prose ul, .prose ol {
    margin-left: 1.5em;
    margin-bottom: 1em;
  }
  .prose li > ul, .prose li > ol {
    margin-top: 0.5em;
  }
  .prose code {
    background-color: var(--medium-bg);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
  }
  .prose pre {
    background-color: var(--medium-bg);
    padding: 1em;
    border-radius: var(--border-radius);
    overflow-x: auto;
    margin-bottom: 1em;
  }
  .prose pre code {
    background-color: transparent;
    padding: 0;
  }
  .prose blockquote {
    border-left: 4px solid var(--accent);
    padding-left: 1em;
    margin-left: 0;
    margin-right: 0;
    font-style: italic;
    color: var(--text-secondary);
  }
</style>
